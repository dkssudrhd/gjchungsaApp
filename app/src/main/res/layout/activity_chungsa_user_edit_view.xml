<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".main_edit.user_edit.Chungsa_user_edit_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/chungsa_user_edit_view_logo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/chungsalogo"/>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kimjungchulgothic_bold"
        android:text="유저수정"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:textSize="40sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:textColor="#000000"
                    android:text="이메일"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/chungsa_user_edit_view_email1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:textColor="#000000"
                    android:text="OOOOOOOOOOOO@naver.com"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:textColor="#000000"
                    android:text="이름"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/chungsa_user_edit_view_name_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000000"
                    android:hint="이름 수정"
                    android:inputType="text"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:text="관리등급"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/chungsa_user_edit_view_grade_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingRight="30dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:text="직분"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/chungsa_user_edit_view_position_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingRight="30dp"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/chungsa_user_edit_view_button"
                        android:layout_width="125dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/design_default_color_primary_dark"
                        android:fontFamily="@font/kimjungchulgothic_bold"
                        android:onClick="chungsa_user_edit_view_update"
                        android:textColor="#000000"
                        android:text="수정"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>