<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sermon.edit.Sermon_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sermon_main_logo_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/chungsalogo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/sermon_insert_go"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:onClick="sermon_insert_go"
                android:text="설교추가"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/sermon_edit_go"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:onClick="sermon_edit_go"
                android:text="설교수정"
                android:textSize="40sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/sermon_delete_go"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:onClick="sermon_delete_go"
                android:text="설교삭제"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/sermon_s_catalouge_btn"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:onClick="sermon_s_catalouge_btn"
                android:text="소분류 설정"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/series_sermon_go_btn"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:onClick="series_sermon_go_btn"
                android:text="시리즈 설정"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>