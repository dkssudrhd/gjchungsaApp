<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".weekly.edit.Weekly_edit_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/weekly_edit_view_logo"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/chungsalogo"
            android:onClick="schedule_edit_insert_logo" />

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kimjungchulgothic_bold"
            android:text="주보 편집"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:textSize="40sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:text="주보제목"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/weekly_edit_view_when_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ex) 20XX.00.00"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/weekly_edit_view_weekly1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/weekly_edit_view_weekly1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="image1_btn"
                    android:text="첫번째 주보" />

                <ImageView
                    android:id="@+id/weekly_edit_view_weekly2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/weekly_edit_view_weekly2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="image2_btn"
                    android:text="두번째 주보" />

                <ImageView
                    android:id="@+id/weekly_edit_view_weekly3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/weekly_edit_view_weekly3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="image3_btn"
                    android:text="세번째 주보" />

                <Button
                    android:id="@+id/weekly_edit_view_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="weekly_update_btn"
                    android:text="수정" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>