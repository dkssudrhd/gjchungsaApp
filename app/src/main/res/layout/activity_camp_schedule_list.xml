                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:text="3"
                    android:textColor="#0000ff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/camp_schedule_list_4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/camp_schedule_list_5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/camp_schedule_list_last_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/kimjungchulgothic_bold"
                    android:text="&gt;&gt;"
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="camp_schedule_insert_btn"
                android:text="글쓰기" />

        </LinearLayout>
    </ScrollView>

