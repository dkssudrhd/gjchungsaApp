<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:background="#89ADCA"
    android:orientation="vertical">

    <TextView
        android:id="@+id/preach_bbs_delete_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/kimjungchulgothic_bold"
        android:gravity="center_vertical"
        android:text="설교제목"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/preach_bbs_delete_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kimjungchulgothic_light"
            android:text="설교날짜"
            android:textColor="#000000"
            android:layout_marginRight="50dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/preach_bbs_delete_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인" />

        <Button
            android:id="@+id/preach_bbs_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제" />
    </LinearLayout>


</LinearLayout>