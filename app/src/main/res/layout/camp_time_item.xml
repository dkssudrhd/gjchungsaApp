<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A7A7FF"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/camp_time_day_play_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:fontFamily="@font/kimjungchulgothic_bold"
        android:text="1번째 일정" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/camp_time_camp_mark_select_linear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/camp_time_select_camp_mark_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:layout_gravity="center"
                android:text="연어로만S" />

            <Button
                android:id="@+id/camp_time_search_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="위치변경" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/camp_time_camp_mark_noselect_linear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:gravity="center"
                android:text="콘텐츠 검색"
                android:textColor="#000000"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/camp_time_search_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="text" />

            <Button
                android:id="@+id/camp_time_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="검색" />


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/camp_mark_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/kimjungchulgothic_bold"
            android:gravity="center"
            android:text="설명"
            android:textColor="#000000"
            android:textSize="22sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <EditText
                android:id="@+id/camp_time_content_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:inputType="text" />

            <TextView
                android:id="@+id/camp_time_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginLeft="5dp"
                android:textSize="22sp"
                android:fontFamily="@font/kimjungchulgothic_bold"
                android:textColor="#000000"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/camp_time_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="변경" />

        <Button
            android:id="@+id/camp_time_checked_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장" />

    </LinearLayout>



</LinearLayout>